    "/journeys/search": {
      "get": {
        "description": "Returns the list of journeys matching the search criteria",
        "tags": ["journeys"],
        "parameters": [
          {
            "name": "take",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "example": 7,
            "description": "Number of journeys to be returned",
            "required": true
          },
          {
            "name": "skip",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 0
            },
            "example": 0,
            "description": "Number of journeys to be skipped",
            "required": true
          },
          {
            "name": "patternFromStation",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "example": "A"
          },
          {
            "name": "patternToStation",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "example": "Ki"
          }
        ],
        "responses": {
          "200": {
            "description": "List of journeys",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "journeys": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Journey"
                      }
                    }
                  },
                  "example": {
                    "skip": 0,
                    "take": 5,
                    "patternFromStation": "A",
                    "patternToStation": "Kirkko"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request for not valid query parameters",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "err": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "skip": 0,
                    "take": -3,
                    "patternFromStation": "Ki",
                    "patternToStation": "A"
                  }
                }
              }
            }
          },
          "404": {
            "description": "General error message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "err": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
