{
  "openapi": "3.0.1",
  "info": {
    "title": "REST API for Helsinki bikes",
    "version": "1.0.0"
  },
  "servers": [{ "url": "http://localhost:3006/api/v1/" }],
  "paths": {
    "/journeys": {
      "get": {
        "parameters": [
          {
            "name": "take",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "example": 5,
            "description": "Number of journeys to be returned",
            "required": true
          },
          {
            "name": "skip",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 0
            },
            "example": 3,
            "description": "Number of journeys to be skipped",
            "required": true
          }
        ],
        "description": "Returns the list of journeys",
        "tags": ["journeys"],
        "responses": {
          "200": {
            "description": "Returns the list of journeys",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "journeys": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Journey"
                      }
                    }
                  },
                  "example": {
                    "skip": 10,
                    "take": 5
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request error for not valid query parameters",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "err": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "skip": -2,
                    "take": 10
                  }
                }
              }
            }
          },
          "404": {
            "description": "General error message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "err": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/journeys/count": {
      "get": {
        "description": "Returns the count of total journeys in database",
        "tags": ["journeys"],
        "responses": {
          "200": {
